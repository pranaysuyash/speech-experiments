# Model Lab Environment Variables
# Copy to .env and fill in your values
# NEVER commit .env to git!

# =============================================================================
# API Keys (for API-based models)
# =============================================================================

# Deepgram (streaming ASR)
# DEEPGRAM_API_KEY=your_key_here

# AssemblyAI (diarization)
# ASSEMBLYAI_API_KEY=your_key_here

# OpenAI (if using OpenAI whisper API, not local)
# OPENAI_API_KEY=your_key_here

# HuggingFace (for gated models)
# HF_TOKEN=your_token_here

# =============================================================================
# Model Paths (for local models)
# =============================================================================

# Whisper.cpp binary and model paths
# WHISPER_CPP_BIN=/path/to/whisper-cli
# WHISPER_CPP_MODEL=/path/to/ggml-large-v3.bin

# =============================================================================
# Device Configuration
# =============================================================================

# Force specific device (cpu, mps, cuda)
# MODEL_LAB_DEVICE=mps

# CUDA visible devices
# CUDA_VISIBLE_DEVICES=0

# =============================================================================
# Logging
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR)
# LOG_LEVEL=INFO
